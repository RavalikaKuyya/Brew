<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="String" />

        <variable
            name="tagsDisplay"
            type="String" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener"/>

        <variable
            name="onLongClick"
            type="android.view.View.OnLongClickListener"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/drink_item_height"
        android:foreground="?selectableItemBackground"
        android:layout_margin="@dimen/full_width_drink_margin"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{onClick}"
        android:onLongClick="@{onLongClick}"
        android:stateListAnimator="@animator/cardview_animator"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{title}"
                android:textColor="#B0ffffff"
                tools:text="Tanqueray No. Ten"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{tagsDisplay}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="#A4ffffff"
                tools:text="Dry, Juniper, Dank"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>